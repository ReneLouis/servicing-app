<!DOCTYPE html>
<html lang="en-GB" dir="ltr">
  <head>
    <title><%= pageTitle %></title>
    <meta charset="UTF-8" />
    <meta name="author" content="RenÃ© Louis" />
    <meta name="description" content="Maintenance log for selected vehicle" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- <link rel="stylesheet" href="stylesheet.css" type="text/css" media="all"> -->
    <script>
      // Picture element HTML5 shiv
      document.createElement("picture");
    </script>
    <script src="js/picturefill.min.js" async></script>
    <!-- <script src="js/fuelTopUp.js" defer></script> -->
    <script>
      /* SHOW FORM TO INPUT NEW VEHICLE DETAILS */
      function showNewVehichleForm() {
        console.log('function showNewVehicleForm launched.');
        document.querySelector('#newVehicleForm').hidden = false;
      }
      function cancelFormSubmission() {
        document.querySelector('#newVehicleForm').hidden = true;
      }
    </script>
  </head>

  <body>
    <a hidden class="skip-link screen-reader-text" href="#content"
      >Skip to content</a
    >
    <header>
      <h1>Welcome</h1>
    </header>

    <main>
      <section class="description">
        <!-- description of site -->
        <p>This is the maintenance log vehicles.</p>
        
      <!-- LIST OF VEHICLES -->
      <section id="content" class="vehicle-list">

        <% vehicleList.forEach(function(e) { %>
            <section class="vehicle-box">
              <h4><%= e.name%>: </h4>
              <a href="/summary/<%= e.shortName %>">Summary</a>
              <a href="/<%= e.shortName %>">Fuel Top-Up</a> 
            </section>
          
        <% }) %>
        
      </section>
      <!-- ADD NEW VEHICLE -->
      <section id="" class="new-vehicle">

        <button id="newVehicleButton" onclick="showNewVehichleForm()">Add New Vehicle Button</button>

        <!-- FORM TO ENTER NEW VEHICHLE DATA -->
        <section hidden id="newVehicleForm" >
          
          <form class="fuel-form" method="POST" action="/">
            <label for="name">Name:</label> </br>
            <input 
              type="text" 
              id="name" 
              name="name" 
              placeholder="Vehicle Name" 
            />
            <br />
            
            <input type="submit" value="Click to create new vehicle" id="cancel"/>
          </form>
          <button id="cancel" onclick="cancelFormSubmission()">Cancel</button>
        </section>

      </section>
    </main>
    <!-- .main-area -->
    <nav></nav>
  </body>
</html>
